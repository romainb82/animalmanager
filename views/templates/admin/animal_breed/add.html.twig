{% extends '@PrestaShop/Admin/layout.html.twig' %}

{% block content %}
  <div class="card">
    <div class="card-header">
      <h3 class="card-title">Ajouter une race</h3>
    </div>
    <div class="card-body">
      <form method="post">
        <div class="form-group">
          <label for="id_animal_type">Type d'animal</label>
          <select name="id_animal_type" id="id_animal_type" class="form-control">
            {% for type in types %}
              <option value="{{ type.id_animal_type }}"
                {% if breed.id_animal_type is defined and type.id_animal_type == breed.id_animal_type %}selected{% endif %}>
                {{ type.name }}
              </option>
            {% endfor %}
          </select>
        </div>

        <div class="form-group">
          <label for="name">Nom de la race</label>
          <input type="text" name="name" id="name" class="form-control" required
                 value="{{ breed.name|default('') }}">
        </div>

        <div class="form-group mt-2">
          <label>
            <input type="checkbox" name="active" value="1"
              {% if breed.active is defined and breed.active %}checked{% endif %}>
            Active
          </label>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Enregistrer</button>
      </form>
    </div>
  </div>
{% endblock %}
